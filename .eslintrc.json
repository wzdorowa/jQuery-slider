{
    "env": {
		"browser": true,
		"es6": true,
		"es2017": true,
		"jest": true
    },
    "plugins": [
      "@typescript-eslint",
      "fsd",
      "prettier"
    ],
    "extends": [
      "airbnb-base",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended",
      "prettier",
      "plugin:prettier/recommended",
      "prettier/@typescript-eslint"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"project": "tsconfig.json",
		"tsconfigRootDir": "."
	},
	"rules": {
		"fsd/hof-name-prefix": "error",
		"fsd/no-heavy-constructor": "error",
		"fsd/jq-cache-dom-elements": "error",
		"fsd/jq-use-js-prefix-in-selector": "error",
		"fsd/no-function-declaration-in-event-listener": "error",
		"fsd/split-conditionals": "error",
		"import": "off",
		"import/extensions": "off",
		"import/no-unresolved": "off",
		"import/first": "off",
    "import/order": "off",
    "no-new": "off",
    "no-shadow": "off"
	},
	"globals": {
        "$": true,
        "jQuery": true
    }
}