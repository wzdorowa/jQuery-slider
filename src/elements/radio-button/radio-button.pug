mixin radio-button({text = 'текст', groupName = 'group', checked} = {text, groupName, checked})
    label.radio-button.js-radio-button
        input.radio-button__content.visually-hidden(type='radio', name=`radio-button-${groupName}`, checked=checked)
        span.radio-button__indicator
        span.radio-button__description=text