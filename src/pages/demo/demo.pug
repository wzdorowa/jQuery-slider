include ../../../src/slider/slider.pug
include ../../elements/radio-button/radio-button.pug
include ../../elements/checkbox-button/checkbox-button.pug

doctype html
html
    head
        meta(charset="UTF-8")
        title Document
        link(rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css")
        link(rel="stylesheet", href="demo.scss")
        block scripts
            script(src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous")
            script(src="../../slider/slider.js")
            script(src="demo.js")
    body
        block content
            .slider-container
                .slider-ui
                    .js-slider-test
                .slider-config
                    .field-group-view
                        h2.title-field-group Вид:
                        .buttons-group
                            +radio-button('Горизонтальный', 'view', 'checked')
                            +radio-button('Вертикальный', 'view')
                    .field-group-valuesMinMax
                        h2.title-field-group Минимальное и максимальное значения слайдера:
                        .input-container
                            .input-item
                                .input-field
                                    .label от
                                    input.input(type="text")
                            .input-item
                                .input-field
                                    .label до
                                    input.input(type="text")  
                    .field-group-numberValues
                        h2.title-field-group Количество ползунков:
                        input.field-group-numberValues-container__content(type='text', value='2')      
                    .field-group-rangeOfValues
                        h2.title-field-group Текущее состояние ползунков:
                        ol.rangeOfValues-list
                            li.rangeOfValues-item
                                input.input-rangeOfValues(type="text", value="0")
                            li.rangeOfValues-item
                                input.input-rangeOfValues(type="text", value="100")
                    .field-group-stepSize
                        h2.title-field-group Размер шага:
                        input.field-group-stepSize-container__content(type='text', value='1')
                    .field-group-tooltip
                        +checkbox-button('Наличие тултипа', 'checked')
                .slider-ui
                    .js-slider-test
                    .js-slider-test
        block scripts